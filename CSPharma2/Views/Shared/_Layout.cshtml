<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSPharmaFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSPharmaFinal.styles.css" asp-append-version="true" />
</head>
<body>

    <header>

        <nav class="navbar navbar-expand-lg" style="background-color: #5ccb5f ;">
            <div class="container-fluid">
                <a class="nav-link text-dark" style="font-weight:bold;" asp-area="" asp-controller="Home" asp-action="Index">PHARMA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (User.IsInRole("administrators"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Estados predeterminados
                            </a>
                            <ul class="dropdown-menu" style="width: 200px; padding:20px;">
                                <li>
                                    <a class="text-decoration-none" asp-area="" asp-controller="TdcCatEstadosDevolucionPedidoes" asp-action="Index">Devoluciones</a>
                                </li>
                                <li>
                                    <a class="text-decoration-none"  asp-area="" asp-controller="TdcCatEstadosEnvioPedidoes" asp-action="Index">Envios</a>
                                </li>
                                <li>
                                    <a class="text-decoration-none" asp-area="" asp-controller="TdcCatEstadosPagoPedidoes" asp-action="Index">Pagos</a>
                                </li>
                                <li>
                                    <a class="text-decoration-none" asp-area="" asp-controller="TdcCatLineasDistribucions" asp-action="Index">Líneas Distribución</a>
                                </li>
                            </ul>
                        </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="TdcTchEstadoPedidoes" asp-action="Index">Lista de Pedidos</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>

    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
